<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Flatボタン -->
    <style name="BowWhiteRippleButtonTheme" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorControlHighlight">@color/button_ripple_white</item>
    </style>

    <!-- Flatボタン -->
    <style name="BowBlackRippleButtonTheme" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorControlHighlight">@color/button_ripple_black</item>
    </style>

    <style name="BowFlatButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BowFlatButtonStyle.Base">
        <item name="android:background">@drawable/rounded_selector_primary</item>
        <item name="android:drawableTint">@color/button_foreground</item>
        <item name="android:textColor">@color/button_foreground</item>
        <item name="android:paddingHorizontal">2dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingVertical">2dp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">1dp</item>
        <item name="android:autoSizeMaxTextSize">12dp</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:lines">1</item>
    </style>

</resources>