<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/icon_selection_view_base"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/view_margin_small"
    android:background="@drawable/gray_rounded_border_selection"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:id="@+id/icon_selection_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/icon_selection_selected"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_foot"
        app:tint="@color/red" />

</FrameLayout>