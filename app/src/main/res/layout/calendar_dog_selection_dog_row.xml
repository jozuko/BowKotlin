<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/dog_list_row_selected_base"
        android:layout_width="40dp"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/dog_list_row_selected"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            app:tint="@color/green"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_selected" />

        <ImageView
            android:id="@+id/dog_list_row_unselected"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            app:tint="@color/black_30"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_unselected" />

    </FrameLayout>

    <ImageView
        android:id="@+id/viewPhoto"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/dog_list_row_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:textColor="@color/calendar_text"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:text="アーロン" />

        <View
            android:id="@+id/dog_list_row_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/dog_list_row_name"
            tools:background="@color/dog_blue" />
    </RelativeLayout>

</LinearLayout>