<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/task_list_row_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/task_list_row_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_toLeftOf="@id/task_list_row_visibility_off"
        android:layout_toRightOf="@id/task_list_row_icon"
        android:textColor="@color/dog_button_enabled"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/task_list_row_edit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_edit" />

    <ImageView
        android:id="@+id/task_list_row_visibility_off"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toLeftOf="@id/task_list_row_edit"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_visibility_off" />
</RelativeLayout>